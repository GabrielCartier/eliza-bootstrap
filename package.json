{
  "name": "bork-tools",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "dev": "bun run --cwd frontend dev",
    "build": "bun run --cwd frontend build",
    "backend:dev": "bun run --cwd backend dev",
    "install:all": "bun install",
    "lint": "biome check .",
    "format": "biome format . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=22"
  }
}
